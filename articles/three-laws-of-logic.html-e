<script>
  (function(){
    // Date stamp
    var now=new Date(), iso=now.toISOString().slice(0,10),
        text=now.toLocaleDateString(undefined,{year:'numeric',month:'long',day:'numeric'});
    var pub=document.getElementById('pub-date'); if(pub){pub.dateTime=iso; pub.textContent=text;}

    // Share links
    var url=location.href, title=document.title;
    var x=document.getElementById('share-x'), fb=document.getElementById('share-fb'), cp=document.getElementById('share-copy');
    if(x) x.href="https://twitter.com/intent/tweet?text="+encodeURIComponent(title)+"&url="+encodeURIComponent(url);
    if(fb) fb.href="https://www.facebook.com/sharer/sharer.php?u="+encodeURIComponent(url);
    if(cp) cp.addEventListener('click', function(){
      if(navigator.share){ navigator.share({title, url}).catch(function(){}); return; }
      navigator.clipboard && navigator.clipboard.writeText(url);
      cp.textContent='✓'; setTimeout(()=>cp.textContent='⧉',900);
    });

    // Author modal
    var icon  = document.getElementById('author-info');
    var modal = document.getElementById('author-modal');
    var close = document.getElementById('author-modal-close');
    var lastFocus;

    function openModal(e){
      if(e){ e.preventDefault(); }
      lastFocus = document.activeElement;
      modal.setAttribute('aria-hidden','false');
      document.documentElement.style.overflow = 'hidden';
      close && close.focus();
    }
    function closeModal(e){
      if(e){ e.preventDefault(); }
      modal.setAttribute('aria-hidden','true');
      document.documentElement.style.overflow = '';
      if(lastFocus && lastFocus.focus) lastFocus.focus();
    }

    if(icon) icon.addEventListener('click', openModal);
    if(close) close.addEventListener('click', closeModal);
    modal.addEventListener('click', function(e){ if(e.target && e.target.hasAttribute('data-close')) closeModal(e); });
    document.addEventListener('keydown', function(e){ if(modal.getAttribute('aria-hidden')==='false' && e.key==='Escape') closeModal(e); });

    // Footnote backrefs => ensure each "↩" targets the inline ref
    document.querySelectorAll('.footnote-ref a[href^="#fn"]').forEach(function (a) {
      var liId = a.getAttribute('href').slice(1);
      var sup = a.closest('.footnote-ref');
      if (!sup.id) {
        var n = a.textContent.trim() || liId.replace(/\D+/g,'');
        sup.id = 'ref-fn' + n;
      }
      var li = document.getElementById(liId);
      if (li) {
        var back = li.querySelector('.backref');
        if (back) back.setAttribute('href', '#' + sup.id);
      }
    });
  })();
</script>
