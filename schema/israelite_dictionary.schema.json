{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Israelite Dictionary",
  "type": "object",
  "required": ["entries"],
  "properties": {
    "entries": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["headword"],
        "properties": {
          "headword": { "type": "string", "minLength": 1 },
          "pos": { "type": "string" },
          "definition": { "type": "string" },
          "usage_notes": { "type": "string" },
          "bible_refs": { "type": "string" },
          "see_also": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
