  <script>
    (function(){
      // Share links
      var url=location.href, title=document.title;
      var x=document.getElementById('share-x'), fb=document.getElementById('share-fb');
      if(x) x.href="https://twitter.com/intent/tweet?text="+encodeURIComponent(title)+"&url="+encodeURIComponent(url);
      if(fb) fb.href="https://www.facebook.com/sharer/sharer.php?u="+encodeURIComponent(url);

      // Active anchor on scroll (side-nav)
      var links=[].slice.call(document.querySelectorAll('.side-nav a'));
      var ids=links.map(a=>document.querySelector(a.getAttribute('href'))).filter(Boolean);
      function onScroll(){
        var y=window.scrollY+120, current=null;
        for(var i=0;i<ids.length;i++){ var el=ids[i]; if(el.offsetTop<=y) current=el; }
        links.forEach(function(a){ a.removeAttribute('aria-current'); });
        if(current){ var link = links.find(a=>a.getAttribute('href')==='#'+current.id); if(link) link.setAttribute('aria-current','true'); }
        // progress
        var d=document.body.scrollHeight - innerHeight;
        var pct = d>0 ? Math.max(0, Math.min(1, window.scrollY/d))*100 : 0;
        document.getElementById('read-progress').style.width = pct + '%';
      }
      window.addEventListener('scroll', onScroll, {passive:true}); onScroll();

      // Objection search filter
      var box=document.getElementById('objection-search');
      var list=document.getElementById('objection-list');
      function filterObjections(){
        var q=(box.value||'').toLowerCase().trim();
        list.querySelectorAll('details.apg-acc').forEach(function(d){
          var hay=(d.innerText+' '+(d.getAttribute('data-tags')||'')).toLowerCase();
          d.style.display = hay.indexOf(q) !== -1 ? '' : 'none';
        });
      }
      if(box){ box.addEventListener('input', filterObjections); }

      // Section filter chips
      var chips=[].slice.call(document.querySelectorAll('.apo-filters .chip'));
      var blocks=[].slice.call(document.querySelectorAll('.apo-block'));
      function applyChip(tag){
        blocks.forEach(function(b){
          if(tag==='all'){ b.hidden=false; return; }
          var tags=(b.getAttribute('data-tags')||'').split(/\s+/);
          b.hidden = !tags.includes(tag);
        });
        chips.forEach(function(c){ c.classList.toggle('is-on', c.getAttribute('data-filter')===tag); });
        // keep side-nav highlighting sane after filtering
        onScroll();
      }
      chips.forEach(function(c){ c.addEventListener('click', function(){ applyChip(c.getAttribute('data-filter')); }); });

    })();
  </script>

